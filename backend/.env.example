# ===========================================
# SiteMind Environment Configuration
# Copy this file to .env and fill in your values
# ===========================================

# Application
APP_NAME=SiteMind
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-generate-with-openssl-rand-hex-32

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/sitemind
DATABASE_SYNC_URL=postgresql://postgres:password@localhost:5432/sitemind

# =====================================================
# Google Gemini 3.0 Pro - State-of-the-art AI
# Get your key at: https://aistudio.google.com/apikey
# Docs: https://ai.google.dev/gemini-api/docs/gemini-3
# =====================================================
GOOGLE_API_KEY=your-gemini-api-key

# Gemini 3.0 Settings (optional - defaults are optimized)
GEMINI_MODEL=gemini-3-pro-preview
GEMINI_THINKING_LEVEL=high
GEMINI_MEDIA_RESOLUTION=high

# Supermemory (Optional - fallback to in-memory if not set)
SUPERMEMORY_API_KEY=your-supermemory-api-key

# Twilio (WhatsApp)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Supabase (Database + Storage - Get from supabase.com dashboard)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# Sentry (Error Tracking) - Optional
SENTRY_DSN=

# Rate Limiting (UNLIMITED at $500/site, but track for analytics)
MAX_QUERIES_PER_USER_PER_DAY=999999
