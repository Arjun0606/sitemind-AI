# ===========================================
# SiteMind Environment Configuration
# Copy this file to .env and fill in your values
# ===========================================

# Application
APP_NAME=SiteMind
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-generate-with-openssl-rand-hex-32

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/sitemind
DATABASE_SYNC_URL=postgresql://postgres:password@localhost:5432/sitemind

# Google Gemini API
GOOGLE_API_KEY=your-gemini-api-key

# OpenAI (Whisper)
OPENAI_API_KEY=your-openai-api-key

# Supermemory (Optional - fallback to in-memory if not set)
SUPERMEMORY_API_KEY=your-supermemory-api-key

# Twilio (WhatsApp)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=sitemind-blueprints
AWS_REGION=ap-south-1

# Sentry (Error Tracking) - Optional
SENTRY_DSN=

# Rate Limiting
MAX_QUERIES_PER_USER_PER_DAY=50
